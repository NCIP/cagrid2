<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.cagrid</groupId>
        <artifactId>cagrid-index</artifactId>
        <version>2.1.0-SNAPSHOT</version>
    </parent>
    <artifactId>cagrid-index-aggregator-api</artifactId>
    <packaging>bundle</packaging>
    <name>caGrid Index Service Aggregator API</name>

    <profiles>
        <profile>
            <id>wsdl2java</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.cxf</groupId>
                        <artifactId>cxf-codegen-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>generate-sources</id>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <wsdlOptions>
                                        <wsdlOption>
                                            <wsdl>work/schema/org/cagrid/index/aggregator/AggregatorServiceGroup_service.wsdl</wsdl>
                                            <wsdlLocation>/schema/org/cagrid/index/aggregator/AggregatorServiceGroup_service.wsdl</wsdlLocation>
                                            <extraargs>
                                                <extraarg>-autoNameResolution</extraarg>
                                                <extraarg>-verbose</extraarg>
                                                <extraarg>-impl</extraarg>
                                                <extraarg>-client</extraarg>
                                                <extraarg>-p</extraarg>
                                                <extraarg>http://mds.globus.org/aggregator/service=org.cagrid.index.aggregator.wsrf.service</extraarg>
                                                <extraarg>-p</extraarg>
                                                <extraarg>http://mds.globus.org/aggregator=org.cagrid.index.aggregator.wsrf.stubs</extraarg>
                                                <extraarg>-p</extraarg>
                                                <extraarg>http://mds.globus.org/aggregator/types=org.cagrid.index.aggregator.types</extraarg>
                                                <extraarg>-p</extraarg>
                                                <extraarg>http://mds.globus.org/metrics/2004/09=org.cagrid.index.metrics.types</extraarg>

                                                <!-- Exclusions -->
                                                <extraarg>-nexclude</extraarg>
                                                <extraarg>urn:oasis:names:tc:SAML:1.0:assertion=org.oasis.names.tc.saml.assertion</extraarg>
                                                <extraarg>-nexclude</extraarg>
                                                <extraarg>http://schemas.xmlsoap.org/ws/2004/03/addressing</extraarg>
                                                <extraarg>-nexclude</extraarg>
                                                <extraarg>http://www.w3.org/2000/09/xmldsig#</extraarg>
                                                <extraarg>-nexclude</extraarg>
                                                <extraarg>http://docs.oasis-open.org/wsrf/2004/06/wsrf-WS-BaseFaults-1.2-draft-01</extraarg>
                                                <extraarg>-nexclude</extraarg>
                                                <extraarg>http://docs.oasis-open.org/wsrf/2004/06/wsrf-WS-ResourceProperties-1.2-draft-01</extraarg>
                                                <extraarg>-nexclude</extraarg>
                                                <extraarg>http://docs.oasis-open.org/wsrf/2004/06/wsrf-WS-ResourceProperties-1.2-draft-01.wsdl</extraarg>
                                                <extraarg>-nexclude</extraarg>
                                                <extraarg>http://docs.oasis-open.org/wsn/2004/06/wsn-WS-BaseNotification-1.2-draft-01</extraarg>
                                                <extraarg>-nexclude</extraarg>
                                                <extraarg>http://docs.oasis-open.org/wsrf/2004/06/wsrf-WS-ResourceLifetime-1.2-draft-01</extraarg>
                                                <extraarg>-nexclude</extraarg>
                                                <extraarg>http://docs.oasis-open.org/wsrf/2004/06/wsrf-WS-ResourceLifetime-1.2-draft-01.wsdl</extraarg>
                                            </extraargs>
                                            <bindingFiles>
                                                <bindingFile>work/schema/jaxb-binding.xjb</bindingFile>
                                            </bindingFiles>
                                        </wsdlOption>
                                    </wsdlOptions>
                                </configuration>
                                <goals>
                                    <goal>wsdl2java</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <resources>
            <resource>
                <directory>work/schema</directory>
                <excludes>
                    <exclude>jaxb-binding.xjb</exclude>
                </excludes>
                <targetPath>schema</targetPath>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>work</directory>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-schema</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>work/schema</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/resources/schema</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>${wsrf.group}</groupId>
                                    <artifactId>ws-model</artifactId>
                                    <version>${wsrf.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>work</outputDirectory>
                                    <includes>schema/**/*.xsd</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>${wsrf.group}</groupId>
                                    <artifactId>wsrf-faults-api</artifactId>
                                    <version>${wsrf.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>work</outputDirectory>
                                    <includes>schema/**/*.xsd,schema/**/*.wsdl</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>${wsrf.group}</groupId>
                                    <artifactId>wsrf-notification-api</artifactId>
                                    <version>${wsrf.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>work</outputDirectory>
                                    <includes>schema/**/*.xsd,schema/**/*.wsdl</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>${wsrf.group}</groupId>
                                    <artifactId>wsrf-servicegroup-api</artifactId>
                                    <version>${wsrf.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>work</outputDirectory>
                                    <includes>schema/**/*.xsd,schema/**/*.wsdl</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>${wsrf.group}</groupId>
                                    <artifactId>wsrf-properties-api</artifactId>
                                    <version>${wsrf.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>work</outputDirectory>
                                    <includes>schema/**/*.xsd,schema/**/*.wsdl</includes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package>
                            schema.org.cagrid.index.aggregator,
                            schema.org.cagrid.index.metrics,
                            org.cagrid.index.aggregator.utils,
                            org.cagrid.index.aggregator.types,
                            org.cagrid.index.metrics.types
                        </Export-Package>
                        <Import-Package>
                            *
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>${wsrf.group}</groupId>
            <artifactId>ws-model</artifactId>
        </dependency>
        <dependency>
            <groupId>${wsrf.group}</groupId>
            <artifactId>wsrf-lifetime-api</artifactId>
        </dependency>
        <dependency>
            <groupId>${wsrf.group}</groupId>
            <artifactId>wsrf-faults-api</artifactId>
        </dependency>
        <dependency>
            <groupId>${wsrf.group}</groupId>
            <artifactId>wsrf-notification-api</artifactId>
        </dependency>
        <dependency>
            <groupId>${wsrf.group}</groupId>
            <artifactId>wsrf-servicegroup-api</artifactId>
        </dependency>
        <dependency>
            <groupId>${wsrf.group}</groupId>
            <artifactId>wsrf-properties-api</artifactId>
        </dependency>
    </dependencies>
</project>
